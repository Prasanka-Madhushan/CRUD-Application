<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h2 class="row d-flex justify-content-center">Services</h2>
            <% if (message) { %>
                <div class="alert alert-dismissibe fade show alert- <%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert"
                    aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>

            <div class="table-responsive">
                <% if(service != '') { %>
                    <table class="table table-stried text-center my-3">
                        <thead>
                            <tr class="table-danger"> 
                                <th>ID</th>
                                <th>Service Name</th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% service.forEach((row, index) => { %>
                                <tr class="table-success">
                                    <td><% index %></td>
                                    <td><%= row.name %></td>
                                    <td><img src="<%= row.image %>" width="80" class="img-thumbnail" ></td>
                                    <td><%= row.desc %></td>
                                    
                                    <td>
                                        <a href="/editService/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        
                                        <a href="/deleteService/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No services found in the database</h1>
                <% } %>
                
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>